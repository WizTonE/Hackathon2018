@model HackathonWeb.Models.ProductModel

@{
    ViewBag.Title = "Product Home";
    Layout = "~/Views/Shared/_ProductLayout.cshtml";
}

<div id="app" class="main-app-container">
    <div class="app-title"><span class="app-tag-line">{{ tagLine }}. CodEMONkEY @@ 2018 Hackthon</span><small> ( {{ currentPosition.latitude }} | {{ currentPosition.longitude }} )</small></div>
    


    
    <!-- route outlet -->
    <!-- component matched by the route will render here -->
    <div id="app-content" class="content-view">
        <router-view></router-view>
    </div>

    <here-map1 v-show="isMapVisible" map-div-id="globalMap" ref="globalMapInstance"></here-map1>
    
    <div id="app-nav" class="nav-view-box">


        <div class="nav-items-box">
            <span class="nav-button"><router-link to="/home">Home</router-link></span>
            <span class="nav-button"><router-link to="/language">Language</router-link></span>
            <span class="nav-button"><router-link to="/setup">Setup</router-link></span>
            <span class="nav-button"><router-link to="/airport">Airport</router-link></span>
            <span class="nav-button"><router-link to="/metro">Metro</router-link></span>
            <span class="nav-button"><router-link to="/taxi">Taxi</router-link></span>
            <span class="nav-button"><router-link to="/hotel">Hotel</router-link></span>
            @* <span class="nav-button"><router-link to="/feedback">Feedback</router-link></span> *@
            <span class="nav-button"><router-link to="/restaurant">Restaurant</router-link></span>
        </div>


    </div>



</div>


<script>
    var TaxiInfo = JSON.parse('@Html.Raw(ViewData["TaxiInfo"])');
    var RestarauntInfo = JSON.parse('@Html.Raw(ViewData["Restaraunts"])'.replace(/\n/g, "\\n")
        .replace(/\r/g, "\\r")
        .replace(/\t/g, "\\t")
        .replace(/\f/g, "\\f"));
</script>
<script type="text/javascript" src="~/Scripts/product.js"></script>
